<!doctype html>
<html>

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="bg-gray-100 h-screen flex items-center justify-center" style="background-color: rgb(187, 202, 197);">

  <!-- Center Upload Button -->
  <button onclick="openModal()" class="px-6 py-3 bg-blue-600 text-white rounded-xl shadow-lg text-lg hover:bg-blue-700">
    Upload File
  </button>
  <form action="/upload" method="post" enctype="multipart/form-data">

    <!-- Modal -->
    <div id="uploadModal" class="fixed inset-0 bg-black/50 hidden items-center justify-center">

      <div class="bg-white w-[400px] rounded-2xl shadow-xl p-6 relative">

        <!-- Close Button -->
        <button type="button" onclick="closeModal()" class="absolute top-3 right-3 text-gray-500 text-xl font-bold">
          ✕
        </button>

        <h2 class="text-xl font-semibold mb-4 text-center">Upload File</h2>

        <!-- Upload Box -->
        <div class="border-2 border-dashed border-gray-300 rounded-xl p-8 text-center">

          <p class="mb-4 text-gray-500">Click below to upload</p>

          <!-- Browse -->
          <button type="button" onclick="document.getElementById('fileInput').click()"
            class="px-4 py-2 bg-blue-600 text-white rounded-lg">
            Browse File
          </button>

          <input id="fileInput" type="file" class="hidden" name="file" />

          <!-- ✅ SUBMIT BUTTON -->
          <button type="submit" class="mt-4 px-4 py-2 bg-green-600 text-white rounded-lg">
            Upload
          </button>

        </div>
      </div>
    </div>
  </form>

  <script>
    function openModal() {
      document.getElementById("uploadModal").classList.remove("hidden");
      document.getElementById("uploadModal").classList.add("flex");
    }

    function closeModal() {
      document.getElementById("uploadModal").classList.add("hidden");
    }
  </script>

</body>

</html>